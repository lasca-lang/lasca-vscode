{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lasca",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#number"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lasca",
					"match": "\\b(def|data|import|if|then|else|match|module|extern|let|in|do)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.lasca",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lasca",
					"match": "\\\\."
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.lasca",
					"match": "true|false"
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric.lasca",
					"match": "(?<![\\d.])\\s0x[a-fA-F\\d]+|\\b\\d+(\\.\\d+)?([eE]-?\\d+)?|\\.\\d+([eE]-?\\d+)?"
				}
			]
		}
	},
	"scopeName": "source.lasca"
}